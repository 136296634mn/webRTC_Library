<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <stroke
        android:width="1dp"
        android:color="@color/tab_bottom_font1"
        /><!-- 描边 ：边框宽度与颜色 -->
    <padding
        android:bottom="3dp"
        android:left="10dp"
        android:right="10dp"
        android:top="3dp"
        /><!-- 主要内容的padding 文字距离上下左右的距离 -->
    <corners
        android:bottomLeftRadius="10dp"
        android:bottomRightRadius="10dp"
        android:topLeftRadius="10dp"
        android:topRightRadius="10dp"
        /><!-- 圆角的半径  也可以统一设置半径 android:radius="9dp"-->

