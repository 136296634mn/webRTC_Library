<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >

    <FrameLayout
        android:id="@+id/cloud_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    </FrameLayout>

    <include
        android:id="@+id/include"
        layout="@layout/activity_head"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/common_backgourd"
        android:orientation="vertical"
        >

        <RelativeLayout
            style="@style/setting_command_layout"
            >

            <ImageView
                android:id="@+id/setting_userinfo"
                android:layout_width="@dimen/common_setting_size"
                android:layout_height="@dimen/common_setting_size"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/setting_logo"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/setting_userinfo"
                android:text="用户信息"
                android:textColor="@color/tab_bottom_font3"
                android:textSize="@dimen/common_smail_size"
                />

            <TextView
                android:id="@+id/tv_xianshi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@mipmap/front"
                android:gravity="center"
                android:padding="5dp"
                android:text="显示"
                android:textColor="@color/tab_bottom_font1"
                android:textSize="@dimen/common_smail_size"
                />
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="0.8dp"
            android:layout_marginLeft="10dp"
            android:background="@color/fengexian_main3"
            />

        <LinearLayout
            android:id="@+id/userinfo_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                >

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="51dp"
                    android:layout_marginStart="51dp"
                    android:text="用户名：测试"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                >

                <TextView
                    android:id="@+id/user_phone"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="51dp"
                    android:text="手    机：测试"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp"
                >

                <TextView
                    android:id="@+id/user_email"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="51dp"
                    android:text="邮    箱：测试"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.8dp"
                android:layout_marginLeft="10dp"
                android:background="@color/fengexian_main3"
                />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.8dp"
            android:layout_marginLeft="10dp"
            android:background="@color/fengexian_main3"
            />

        <RelativeLayout
            style="@style/setting_command_layout"
            >

            <ImageView
                android:id="@+id/setting_jishi_pass"
                android:layout_width="@dimen/common_setting_size"
                android:layout_height="@dimen/common_setting_size"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/setting_lock"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/setting_jishi_pass"
                android:text="即时会议密码"
                android:textColor="@color/tab_bottom_font3"
                android:textSize="@dimen/common_smail_size"
                />

            <TextView
                android:id="@+id/bianji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@mipmap/front"
                android:gravity="center"
                android:padding="5dp"
                android:text="编辑"
                android:textColor="@color/tab_bottom_font1"
                android:textSize="@dimen/common_smail_size"
                android:textCursorDrawable="@color/white_pressed"
                />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.8dp"
            android:layout_marginLeft="10dp"
            android:background="@color/fengexian_main3"
            />

        <LinearLayout
            android:id="@+id/pass_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="51dp"
                    android:layout_marginStart="51dp"
                    android:text="会议密码"
                    android:textColor="@color/black"
                    />

                <com.xiaoqiang.online.customview.IsShowPassEditText
                    android:id="@+id/password_conference"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/bei_edittext"
                    android:drawableRight="@mipmap/eyes_close"
                    android:inputType="textPassword"
                    android:maxLength="8"
                    android:padding="5dp"
                    android:textColor="@color/white_pressed"
                    android:textColorHint="@color/white_pressed"
                    android:textSize="@dimen/common_smail_size"
                    android:textCursorDrawable="@color/white_pressed"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="51dp"
                    android:text="主持人密码"
                    android:textColor="@color/black"
                    />
                <com.xiaoqiang.online.customview.IsShowPassEditText
                    android:id="@+id/password_host"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/bei_edittext"
                    android:drawableRight="@drawable/swich_eyes"
                    android:inputType="textPassword"
                    android:maxLength="8"
                    android:padding="5dp"
                    android:textColor="@color/white_pressed"
                    android:textColorHint="@color/white_pressed"
                    android:textSize="@dimen/common_smail_size"
                    />

            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.8dp"
                android:layout_marginLeft="10dp"
                android:background="@color/fengexian_main3"
                />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/video_cif"
            style="@style/setting_command_layout"
            >

            <ImageView
                android:id="@+id/setting_quality"
                android:layout_width="@dimen/common_setting_size"
                android:layout_height="@dimen/common_setting_size"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@mipmap/setting_video_quality"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/setting_quality"
                android:text="视频质量"
                android:textColor="@color/tab_bottom_font3"
                android:textSize="@dimen/common_smail_size"
                />

            <TextView
                android:id="@+id/tv_video_quality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:text="@string/setting_video_2"
                android:textColor="@color/tab_bottom_font1"
                android:textSize="@dimen/common_smail_size"
                />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.8dp"
            android:layout_marginLeft="10dp"
            android:background="@color/fengexian_main3"
            />

        <LinearLayout
            android:id="@+id/camera_change"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_meeting"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/setting2"
                android:layout_width="@dimen/common_setting_size"
                android:layout_height="@dimen/common_setting_size"
                android:layout_marginRight="20dp"
                android:src="@mipmap/setting_camera"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="默认摄像头"
                android:textColor="@color/tab_bottom_font3"
                android:textSize="@dimen/common_smail_size"
                />

            <ToggleButton
                android:id="@+id/setting_camera"
                android:layout_width="50dp"
                android:layout_height="26dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/swich_camera"
                android:checked="true"
                android:text=""
                android:textOff=""
                android:textOn=""
                />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.8dp"
            android:layout_marginLeft="10dp"
            android:background="@color/fengexian_main3"
            />

        <LinearLayout
            android:id="@+id/speaker_open"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_meeting"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/setting3"
                android:layout_width="@dimen/common_setting_size"
                android:layout_height="@dimen/common_setting_size"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@mipmap/setting_speaker"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/setting3"
                android:text="扬声器"
                android:textColor="@color/tab_bottom_font3"
                android:textSize="@dimen/common_smail_size"
                />

            <ToggleButton
                android:id="@+id/setting_speaker"
                android:layout_width="40dp"
                android:layout_height="26dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/toggle_btn"
                android:checked="true"
                android:text=""
                android:textOff=""
                android:textOn=""
                />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.8dp"
            android:layout_marginLeft="10dp"
            android:background="@color/fengexian_main3"
            />

        <LinearLayout
            android:id="@+id/mic_open"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_meeting"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/setting4"
                android:layout_width="@dimen/common_setting_size"
                android:layout_height="@dimen/common_setting_size"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@mipmap/setting_mike"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/setting4"
                android:text="麦克风"
                android:textColor="@color/tab_bottom_font3"
                android:textSize="@dimen/common_smail_size"
                />

            <ToggleButton
                android:id="@+id/setting_microphone"
                android:layout_width="40dp"
                android:layout_height="26dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/toggle_btn"
                android:checked="true"
                android:text=""
                android:textOff=""
                android:textOn=""
                />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.8dp"
            android:layout_marginLeft="10dp"
            android:background="@color/fengexian_main3"
            />

        <RelativeLayout
            android:id="@+id/video_number"
            style="@style/setting_command_layout">

            <ImageView
                android:id="@+id/setting5"
                android:layout_width="@dimen/common_setting_size"
                android:layout_height="@dimen/common_setting_size"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@mipmap/setting_video_quantity"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/setting5"
                android:text="接收视频数量"
                android:textColor="@color/tab_bottom_font3"
                android:textSize="@dimen/common_smail_size"
                />

            <TextView
                android:id="@+id/video_number_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:text="@string/setting_video_number5"
                android:textColor="@color/tab_bottom_font1"
                android:textSize="@dimen/common_smail_size"
                />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.8dp"
            android:background="@color/fengexian_main3"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/sign_out1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  退出登录"
                android:padding="@dimen/ten_dp"
                android:drawableLeft="@mipmap/setting_sign_out"
                android:background="@drawable/select_white"
                android:textColor="#cccccc"
                android:textSize="@dimen/setting_sign_out"
                />
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>