<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/select_white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/image_tou"
        android:layout_width="@dimen/item_height"
        android:layout_height="@dimen/item_height"
        android:layout_marginLeft="@dimen/ten_dp"
        android:contentDescription="@string/app_name"
        android:padding="6dp"
        android:src="@mipmap/user_default" />
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ten_dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="齐浩"
            android:textColor="@color/black"
            android:textSize="@dimen/contact_item_name_font"
            tools:ignore="HardcodedText"
            />

        <TextView
            android:id="@+id/item_pinyin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="乐清最大皮革厂制造商"
            android:textSize="@dimen/contact_item_pinyin_font"
            android:visibility="gone"
            tools:ignore="HardcodedText"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/chat_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:src="@mipmap/chat_color"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/chat_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:src="@mipmap/video_chat_color"
            />

        <ImageView
            android:id="@+id/call_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:src="@mipmap/call"
            />
    </LinearLayout>


</LinearLayout>