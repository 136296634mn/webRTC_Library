<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:aandroid="http://schemas.android.com/apk/res-auto"
              android:background="#818181"
              android:orientation="vertical"
              tools:context="com.xiaoqiang.online.fragment.DriverFragment"
    >

    <RelativeLayout
        android:id="@+id/tou_layout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@mipmap/navigationbar_safe"
        android:clipToPadding="true"
        android:fitsSystemWindows="true"
        >

        <ToggleButton
            android:id="@+id/sound_iv"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/sound_check"
            android:checked="true"
            android:textOff=""
            android:textOn=""
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="安全驾驶模式"
            />

        <ImageView
            android:id="@+id/phone_iv"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/hangup"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="轻击切换到静音模式"
            android:textColor="@color/black"
            android:textSize="10sp"
            />

        <ToggleButton
            android:id="@+id/sound_mute"
            android:layout_width="40dp"
            android:layout_height="80dp"
            android:layout_margin="20dp"
            android:background="@drawable/mic_check"
            android:checked="true"
            android:text=""
            android:textOff=""
            android:textOn=""
            />

        <TextView
            android:id="@+id/text_driver"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bei_serch"
            android:gravity="center"
            android:text="麦克风已开启视频已暂停"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/light_dot"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/black_dot"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
